<div id="flash">
  <%= render 'comments/flash' %>
</div>
<div class="flex mx-auto items-center justify-center shadow-lg mt-16 mb-4 max-w-lg bg-white">
  <%= form_with model: comment, url: post_comments_path(post, comment), local: true, class: 'w-full max-w-xl rounded-lg px-4 pt-2' do |f| %>
    <div class="flex flex-wrap -mx-3 mb-6">
      <h2 class="px-4 pt-3 pb-2 text-lg">コメントを追加する</h2>
      <div class="w-full md:w-full px-3 mb-2 mt-2">
        <%= f.text_area :body, placeholder: '255字以内で入力してください', class: 'textarea bg-stone-100 rounded border border-stone-400 w-full h-20 py-2 px-3 font-medium placeholder-stone-400' %>
      </div>
      <div class="w-full px-3">
        <div class="-mr-1 flex justify-end items-end">
          <%= f.submit t('defaults.posting'), data: { turbo_frame: dom_id(Comment.new) }, class: 'btn btn-accent btn-sm font-medium py-1 px-4 rounded-lg'%>
        </div>
      </div>
    </div>
  <% end %>
</div>
