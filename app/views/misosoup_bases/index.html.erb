<% set_meta_tags title: t('.title') %>
<div class="px-2 py-6 md:py-8">
  <div class="max-w-screen-xl px-6 md:px-10 mx-auto">
    <div class="mb-10 md:mb-16 text-center">
      <h2 class="text-2xl lg:text-3xl font-bold mb-4 md:mb-6"><%= t('.title') %></h2>
      <div class="flex items-center justify-center">
        <%= link_to "検索する", new_misosoup_base_path, class: 'btn btn-secondary' %>
        <p class="mx-2">または</p>
        <%= link_to "おすすめを見る", recommend_misosoup_bases_path, class: 'btn btn-accent' %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 mb-10 w-full md:w-2/3 mx-auto">
    <% @misosoup_bases.each do |misosoup_base| %>
      <div class="card mx-auto bg-stone-200 p-4">
        <%= image_tag misosoup_base.item_image_urls, size: '128x128', class: 'mx-auto' %>
        <div class="card-body">
          <div class="card-title">
            <%= link_to misosoup_base.item_name, misosoup_base.item_url, class:'no-underline hover:underline' %>
          </div>
          <p>価格：<%= misosoup_base.item_price %>円</p>
          <div class="flex justify-end">
            <%= link_to misosoup_base_path(misosoup_base), data: { turbo_method: :delete, turbo_confirm: t('defaults.message.delete?') } do %>
              <div class="absolute bottom-0 right-0 p-2">
                <button class="btn btn-ghost md:btn-lg">
                  <i class="fa-solid fa-trash md:fa-2x"></i>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
