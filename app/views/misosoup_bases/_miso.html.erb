<div class="grid gap-4 sm:grid-cols-2 md:gap-6 lg:grid-cols-3 xl:grid-cols-4">
  <% miso.each do |m| %>
    <div class="flex flex-col rounded-lg border bg-white">
      <%= image_tag(m['mediumImageUrls'][0], size: '128x128', class: 'mx-auto py-6') %>
      <div  class="flex flex-1 flex-col p-4 sm:p-6">
        <h2 class="mb-2 text-lg font-semibold">
          <%= link_to m['itemName'], m['itemUrl'], class:'no-underline hover:underline' %>
        </h2>
        <p>価格：<%= m['itemPrice'] %>円</p>
        <div class="mt-auto flex items-end justify-end">
          <div class="flex items-center gap-2">
            <%= link_to '商品を追加する', misosoup_bases_path(code: m['itemCode'],
                                              name: m['itemName'],
                                              url: m['itemUrl'],
                                              price: m['itemPrice'],
                                              image: m['mediumImageUrls'][0]),
                                              class: 'btn btn-secondary',
                                              data: { 'turbo_method': :post } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
