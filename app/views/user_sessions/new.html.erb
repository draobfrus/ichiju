<div class="py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 py-4 md:px-8 mx-auto">
    <h2 class="text-accent-content text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">
      <%= t('defaults.login') %>
    </h2>
    <div class="max-w-xl border rounded-xl mx-auto mb-10">
      <div class="flex flex-col bg-stone-50 gap-4 p-4 md:p-8 ">
        <%= form_with url: login_path, local: true do |f| %>
          <div class="form-control mb-4">
            <%= f.label :email, User.human_attribute_name(:email), class: 'label text-accent-content font-bold' %>
            <%= f.email_field :email, class: 'input input-accent w-full' %>
          </div>
          <div class="form-control mb-4">
            <%= f.label :password, User.human_attribute_name(:password), class: 'label text-accent-content font-bold' %>
            <%= f.password_field :password, class: 'input input-accent w-full' %>
          </div>
          <%= f.submit (t 'defaults.login'), class: 'btn btn-block btn-primary mt-10 mb-10'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
