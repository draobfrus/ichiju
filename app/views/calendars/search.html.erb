<% set_meta_tags title: t('.title', word: l(@posts.first.created_at, format: :short)) %>
<div class="py-6 md:py-8">
  <div class="max-w-screen-xl px-6 md:px-10 mx-auto">
    <div class="mb-10 md:mb-16">
      <h2 class="text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6">
        <%= t('.title', word: l(@posts.first.created_at, format: :short)) %>
      </h2>
    </div>
    <div class="grid grid-cols-2 mb-20 md:mb-10 md:grid-cols-3 gap-x-4 lg:gap-x-8 gap-y-8 lg:gap-y-12">
      <%= render @posts %>
    </div>
  </div>
</div>
