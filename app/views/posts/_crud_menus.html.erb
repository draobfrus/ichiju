<div class="card-body text-accent-content">
  <div class="card-actions justify-center gap-32">
    <%= link_to edit_post_path(@post) do %>
      <button class="btn gap-2 btn-outline btn-success lg:btn-lg">
        <i class="fa-solid fa-pen md:fa-2x"></i>
        <%= t('.edit') %>
      </button>
    <% end %>
    <%= link_to post_path(@post), data: { turbo_method: :delete, turbo_confirm: t('.delete?') } do %>
      <button class="btn gap-2 btn-outline btn-warning lg:btn-lg">
        <i class="fa-solid fa-trash md:fa-2x"></i>
        <%= t('.delete') %>
      </button>
    <% end %>
  </div>
</div>
