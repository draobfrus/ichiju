<% if post.liked_by?(current_user) %>
  <%= link_to like_path(current_user.likes.find_by(post_id: params[:id])), data: { turbo_method: :delete } do %>
    <div class="flex gap-2 font-bold">
      <i class="fa-solid fa-heart fa-2x text-secondary"></i>
      <%= post.liking_users.size %>
    </div>
  <% end %>
<% else %>
  <%= link_to likes_path(post_id: params[:id]), data: { turbo_method: :post } do %>
    <div class="flex gap-2 font-bold">
      <i class="fa-regular fa-heart fa-2x text-secondary"></i>
      <%= post.liking_users.size %>
    </div>
  <% end %>
<% end %>
