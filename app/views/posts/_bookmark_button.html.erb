<% if post.bookmarked_by?(current_user) %>
  <%= link_to bookmark_path(current_user.bookmarks.find_by(post_id: params[:id])), data: { turbo_method: :delete } do %>
    <div class="tooltip tooltip-bottom tooltip-secondary" data-tip="ブックマーク解除">
      <i class="fa-solid fa-bookmark fa-2x text-sakura"></i>
    </div>
  <% end %>
<% else %>
  <%= link_to bookmarks_path(post_id: params[:id]), data: { turbo_method: :post } do %>
    <div class="tooltip tooltip-bottom tooltip-secondary" data-tip="ブックマーク">
      <i class="fa-regular fa-bookmark fa-2x text-sakura"></i>
    </div>
  <% end %>
<% end %>
