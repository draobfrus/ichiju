<% if post.bookmarked_by?(current_user) %>
  <%= link_to bookmark_path(current_user.bookmarks.find_by(post_id: params[:id])), data: { turbo_method: :delete } do %>
      <%= render 'bookmark', post: post %>
  <% end %>
<% else %>
  <%= link_to bookmarks_path(post_id: params[:id]), data: { turbo_method: :post } do %>
    <%= render 'unbookmark', post: post %>
  <% end %>
<% end %>
