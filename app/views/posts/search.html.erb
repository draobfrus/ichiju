<div class="py-6 md:py-8">
  <div class="max-w-screen-xl px-6 md:px-10 mx-auto">
    <div class="mb-10 md:mb-16">
      <%= form_with model: @search_form, url: search_posts_path, scope: :q, method: :get, local: true, class: "flex items-center justify-center" do |f| %>
        <%= f.search_field :title_or_content, class: 'input input-primary' %>
        <%= f.submit '投稿を検索する', class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="mb-10 md:mb-16">
      <h2 class="text-accent-content text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6">新着レシピ</h2>
    </div>
    <div class="grid grid-cols-2 mb-20 md:mb-10 md:grid-cols-3 gap-x-4 lg:gap-x-8 gap-y-8 lg:gap-y-12 bg-stone-50">
      <%= render @posts %>
    </div>
  </div>
  <%= paginate @posts %>
</div>
