<% content_for(:title, t('.title')) %>
<div class="py-6 md:py-8">
  <div class="max-w-screen-xl px-6 md:px-10 mx-auto">
    <%= render partial: 'search_post_form', locals: { search_form: @search_form } %>
    <% if @posts.present? %>
      <div class="mb-10 md:mb-16">
        <h2 class="text-2xl lg:text-3xl font-bold text-center md:mb-6">
          <%= t('.title') %> <%= params[:q][:title_or_content] %>
        </h2>
        <p>
      </div>
      <div class="grid grid-cols-2 mb-20 md:mb-10 md:grid-cols-3 gap-x-4 lg:gap-x-8 gap-y-8 lg:gap-y-12">
        <%= render @posts %>
      </div>
    <%= paginate @posts %>
    <% else %>
      <h2 class="text-md lg:text-xl font-bold text-center md:mb-6"><%= t('.no_result') %></h2>
    <% end %>
  </div>
</div>
